<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:jaxws="http://cxf.apache.org/jaxws"
    xsi:schemaLocation="
http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans.xsd">


    <bean id="CountableService" class="java.lang.Class"
        factory-method="forName">
        <constructor-arg value="cbs.core.model.CountableService" />
    </bean>

    <bean id="UncountableService" class="java.lang.Class"
        factory-method="forName">
        <constructor-arg value="cbs.core.model.UncountableService" />
    </bean>

    <bean id="servicestructure" class="cbs.core.model.ServiceStructure">
        <property name="services">
            <map>
                <entry key="electricity" value-ref="CountableService" />
                <entry key="rent" value-ref="UncountableService" />
            </map>
        </property>
    </bean>
    
    <bean id="bills" class="cbs.core.model.Bills" />

    <bean id="billdaoxml" class="cbs.dao.BillDAOXmlImpl">
        <constructor-arg value="config.properties" />
        <constructor-arg ref="bills" />
        <property name="serviceStructure" ref="servicestructure" />
    </bean>
</beans>
